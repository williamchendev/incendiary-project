            <string>if (keyboard_check_pressed(vk_f11)){
    window_set_fullscreen(!window_get_fullscreen());
}

if (keyboard_check_pressed(ord("R"))){
    room_restart();
}


if (room_type == "map"){
    //Time
    timer++;
    if (timer == timespd){
        timer = 0;
        time++;
        if (time &gt;= 1440){
            time = 0;
        }
    }
    
    //Gas
    gas = clamp(gas, 0, gasmax);
    
    //Scroll Map
    if (mouse_check_button(mb_left)){
        view_xview += ((mouse_x - (view_wview / 2)) - view_xview) * 0.05;
        view_yview += ((mouse_y - (view_hview / 2)) - view_yview) * 0.05;
        
        view_xview = round(view_xview);
        view_yview = round(view_yview);
    }
}
else if (room_type == "combat"){
    //Time
    timer++;
    if (timer == timespd){
        timer = 0;
        time++;
        if (time &gt;= 1440){
            time = 0;
        }
    }
    
    //Unit Init
    if (!unit_create){
        unit_create = true;
        for (i = 0; i &lt; 3; i++){
            unit[i] = noone;
            if (i &lt; unitnum){
                UnitCreateScript(50, irandom_range(128, 250), i);
            }
        }
    }
    
    //Select
    if (mouse_check_button_pressed(mb_left)){
        if (position_meeting(mouse_x, mouse_y, oUnit)){
            oUnit.selected = false;
            select_unit = instance_position(mouse_x, mouse_y, oUnit);
            select_unit.selected = true;
        }
        else {
            oUnit.selected = false;
        }
    }
    
    //View
    view_xview = 0;
    view_yview = 0;
}
